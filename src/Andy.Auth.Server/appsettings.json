{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=andy_auth;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "ClientId": "",
    "ClientSecret": "",
    "TenantId": "common"
  },
  "CorsOrigins": {
    "AllowedOrigins": [
      "https://wagram.ai",
      "https://www.wagram.ai"
    ]
  },
  "OpenIddict": {
    "Server": {
      "EncryptionKey": "CHANGE-THIS-32-CHAR-ENCRYPTION-KEY",
      "SigningKey": "CHANGE-THIS-32-CHAR-SIGNING-KEY"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*/Account/Login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/Account/Register",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "*/connect/token",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*/connect/authorize",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}
