@{
    ViewData["Title"] = "Authentication Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
        }

        .container {
            background: white;
            padding: 3rem 2rem;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            text-align: center;
            max-width: 500px;
            margin: 1rem;
        }

        .success-icon {
            font-size: 4rem;
            color: #4CAF50;
            margin-bottom: 1.5rem;
        }

        h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        p {
            font-size: 1rem;
            color: #7f8c8d;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .info {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .info p {
            margin: 0.5rem 0;
            font-size: 0.9rem;
        }

        .info strong {
            color: #2c3e50;
        }

        .buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        button, .btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 0.875rem 2rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        button:hover, .btn:hover {
            background: #5568d3;
            transform: translateY(-1px);
        }

        button:active, .btn:active {
            transform: translateY(1px);
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-icon">âœ“</div>
        <h1>Authentication Successful</h1>
        <p>You have been successfully authenticated.</p>

        <div class="info">
            <p><strong>Email:</strong> @User.Identity?.Name</p>
            <p><strong>Status:</strong> Signed In</p>
        </div>

        <p>You may now close this window and return to the application.</p>

        <div class="buttons">
            <button onclick="window.close()">Close Window</button>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="btn-secondary">Sign Out</button>
            </form>
        </div>
    </div>
</body>
</html>
