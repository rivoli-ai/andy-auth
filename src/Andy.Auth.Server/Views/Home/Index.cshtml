@{
    ViewData["Title"] = "Home";

    // Redirect authenticated users to admin dashboard
    if (User.Identity?.IsAuthenticated == true)
    {
        Context.Response.Redirect("/Admin");
        return;
    }
}

<div class="card home-card">
    <h2>Welcome to Andy Auth</h2>
    <p>
        Andy Auth is your secure, self-hosted authentication server powered by OpenIddict.
        Manage users, applications, and authentication flows all in one place.
    </p>

    <div class="auth-actions">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
    </div>
</div>
