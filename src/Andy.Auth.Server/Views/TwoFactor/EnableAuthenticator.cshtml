@model Andy.Auth.Server.Controllers.EnableAuthenticatorViewModel
@{
    ViewData["Title"] = "Enable Authenticator";
}

<style>
    .setup-page {
        max-width: 600px;
        margin: 0 auto;
    }

    .setup-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 2rem;
    }

    .setup-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .setup-header h2 {
        font-size: 1.5rem;
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .setup-header p {
        color: var(--text-muted);
    }

    .step {
        margin-bottom: 2rem;
    }

    .step-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .step-number {
        width: 28px;
        height: 28px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .step-title {
        font-weight: 600;
        color: var(--text);
    }

    .qr-code-container {
        text-align: center;
        padding: 1.5rem;
        background: white;
        border-radius: 8px;
        border: 1px solid var(--border);
        margin-bottom: 1rem;
    }

    .qr-code-container img {
        max-width: 200px;
        height: auto;
    }

    .manual-key {
        background: var(--surface-2);
        padding: 1rem;
        border-radius: 8px;
        font-family: monospace;
        font-size: 0.95rem;
        text-align: center;
        letter-spacing: 0.1em;
        color: var(--text);
        word-break: break-all;
    }

    .manual-key-label {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text);
    }

    .form-group input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        font-size: 1.1rem;
        font-family: monospace;
        text-align: center;
        letter-spacing: 0.2em;
    }

    .form-group input:focus {
        outline: none;
        border-color: var(--primary);
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.85rem;
        margin-top: 0.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        flex: 1;
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

    .btn-primary:hover {
        background: var(--primary-dark);
    }

    .btn-secondary {
        background: var(--surface-2);
        color: var(--text);
        border: 1px solid var(--border);
    }

    .btn-secondary:hover {
        background: var(--background);
    }

    .app-suggestions {
        margin-top: 1rem;
        padding: 1rem;
        background: var(--surface-2);
        border-radius: 8px;
    }

    .app-suggestions h4 {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .app-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .app-badge {
        background: var(--surface);
        padding: 0.25rem 0.625rem;
        border-radius: 4px;
        font-size: 0.8rem;
        color: var(--text-muted);
    }
</style>

<div class="setup-page">
    <div class="setup-card">
        <div class="setup-header">
            <h2>Set Up Authenticator</h2>
            <p>Scan the QR code with your authenticator app to enable two-factor authentication</p>
        </div>

        <div class="step">
            <div class="step-header">
                <span class="step-number">1</span>
                <span class="step-title">Scan the QR code</span>
            </div>
            <div class="qr-code-container">
                <img src="data:image/png;base64,@Model.QrCodeBase64" alt="QR Code for authenticator app" />
            </div>
            <div class="app-suggestions">
                <h4>Compatible apps:</h4>
                <div class="app-list">
                    <span class="app-badge">Google Authenticator</span>
                    <span class="app-badge">Microsoft Authenticator</span>
                    <span class="app-badge">Authy</span>
                    <span class="app-badge">1Password</span>
                </div>
            </div>
        </div>

        <div class="step">
            <div class="step-header">
                <span class="step-number">2</span>
                <span class="step-title">Or enter this key manually</span>
            </div>
            <p class="manual-key-label">If you can't scan the QR code, enter this key in your app:</p>
            <div class="manual-key">@Model.SharedKey</div>
        </div>

        <div class="step">
            <div class="step-header">
                <span class="step-number">3</span>
                <span class="step-title">Verify setup</span>
            </div>
            <form asp-action="EnableAuthenticator" method="post">
                <div class="form-group">
                    <label asp-for="Code">Enter the 6-digit code from your app</label>
                    <input asp-for="Code" type="text" maxlength="6" pattern="[0-9]*" inputmode="numeric" autocomplete="one-time-code" placeholder="000000" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Verify & Enable</button>
                </div>
            </form>
        </div>
    </div>
</div>
