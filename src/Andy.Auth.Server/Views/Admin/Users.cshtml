@model List<(Andy.Auth.Server.Data.ApplicationUser User, bool IsAdmin)>
@{
    ViewData["Title"] = "Users";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var totalUsers = ViewBag.TotalUsers;
    var search = ViewBag.Search as string;
    var sortBy = ViewBag.SortBy as string ?? "CreatedAt";
    var sortOrder = ViewBag.SortOrder as string ?? "desc";
}


<div class="admin-page">
    <div class="page-header">
        <div>
            <h1>Users</h1>
            <p class="subtitle">Total: @totalUsers users</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18Z" stroke="currentColor" stroke-width="2"/>
                <path d="M7 10L9 12L13 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18Z" stroke="currentColor" stroke-width="2"/>
                <path d="M10 6V10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <circle cx="10" cy="13" r="1" fill="currentColor"/>
            </svg>
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Search and Filter -->
    <form method="get" asp-action="Users" class="filters-form">
        <div class="filters-container">
            <input type="text" name="search" value="@search" placeholder="Search by email or name..." class="search-input" />
            <input type="hidden" name="sortBy" value="@sortBy" />
            <input type="hidden" name="sortOrder" value="@sortOrder" />
            <button type="submit" class="btn btn-primary">Search</button>
            @if (!string.IsNullOrWhiteSpace(search))
            {
                <a asp-action="Users" class="btn btn-secondary">Clear</a>
            }
        </div>
    </form>

    @if (Model.Any())
    {
        <div class="users-table-container">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>
                            @{
                                var emailSortOrder = (sortBy == "Email" && sortOrder == "desc") ? "asc" : "desc";
                                var emailSortUrl = $"?page={currentPage}&sortBy=Email&sortOrder={emailSortOrder}" + (string.IsNullOrWhiteSpace(search) ? "" : $"&search={System.Web.HttpUtility.UrlEncode(search)}");
                                var emailSortIcon = sortBy != "Email" ? "⇅" : (sortOrder == "asc" ? "↑" : "↓");
                            }
                            <a href="@emailSortUrl" class="sort-header">Email @emailSortIcon</a>
                        </th>
                        <th>
                            @{
                                var nameSortOrder = (sortBy == "FullName" && sortOrder == "desc") ? "asc" : "desc";
                                var nameSortUrl = $"?page={currentPage}&sortBy=FullName&sortOrder={nameSortOrder}" + (string.IsNullOrWhiteSpace(search) ? "" : $"&search={System.Web.HttpUtility.UrlEncode(search)}");
                                var nameSortIcon = sortBy != "FullName" ? "⇅" : (sortOrder == "asc" ? "↑" : "↓");
                            }
                            <a href="@nameSortUrl" class="sort-header">Full Name @nameSortIcon</a>
                        </th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Expiration</th>
                        <th>
                            @{
                                var createdSortOrder = (sortBy == "CreatedAt" && sortOrder == "desc") ? "asc" : "desc";
                                var createdSortUrl = $"?page={currentPage}&sortBy=CreatedAt&sortOrder={createdSortOrder}" + (string.IsNullOrWhiteSpace(search) ? "" : $"&search={System.Web.HttpUtility.UrlEncode(search)}");
                                var createdSortIcon = sortBy != "CreatedAt" ? "⇅" : (sortOrder == "asc" ? "↑" : "↓");
                            }
                            <a href="@createdSortUrl" class="sort-header">Created @createdSortIcon</a>
                        </th>
                        <th>
                            @{
                                var loginSortOrder = (sortBy == "LastLogin" && sortOrder == "desc") ? "asc" : "desc";
                                var loginSortUrl = $"?page={currentPage}&sortBy=LastLogin&sortOrder={loginSortOrder}" + (string.IsNullOrWhiteSpace(search) ? "" : $"&search={System.Web.HttpUtility.UrlEncode(search)}");
                                var loginSortIcon = sortBy != "LastLogin" ? "⇅" : (sortOrder == "asc" ? "↑" : "↓");
                            }
                            <a href="@loginSortUrl" class="sort-header">Last Login @loginSortIcon</a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (user, isAdmin) in Model)
                    {
                        <tr class="@(user.DeletedAt.HasValue ? "deleted-row" : "")">
                            <td>
                                <strong>@user.Email</strong>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge badge-verified">
                                        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M10 3L4.5 8.5L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                        Verified
                                    </span>
                                }
                            </td>
                            <td>@(user.FullName ?? "-")</td>
                            <td>
                                @if (isAdmin)
                                {
                                    <span class="badge badge-admin">Admin</span>
                                }
                                else
                                {
                                    <span class="text-muted">User</span>
                                }
                            </td>
                            <td>
                                @if (user.DeletedAt.HasValue)
                                {
                                    <span class="status-badge deleted">Deleted</span>
                                }
                                else if (user.IsSuspended)
                                {
                                    <span class="status-badge suspended" title="@user.SuspensionReason">Suspended</span>
                                }
                                else if (user.IsActive)
                                {
                                    <span class="status-badge active">Active</span>
                                }
                                else
                                {
                                    <span class="status-badge inactive">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (user.ExpiresAt.HasValue)
                                {
                                    var isExpired = user.ExpiresAt.Value < DateTime.UtcNow;
                                    <span class="expiration-badge @(isExpired ? "expired" : "")">
                                        @user.ExpiresAt.Value.ToString("MMM dd, yyyy")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>@(user.LastLoginAt?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</td>
                            <td>
                                <div class="action-buttons">
                                    @if (!user.DeletedAt.HasValue)
                                    {
                                        @if (user.IsSuspended)
                                        {
                                            <button class="btn-action btn-success" onclick="unsuspendUser('@user.Id', '@user.Email')" title="Unsuspend User">
                                                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14Z" stroke="currentColor" stroke-width="1.5"/>
                                                    <path d="M6 8L7.5 9.5L10 6.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                </svg>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn-action btn-warning" onclick="showSuspendModal('@user.Id', '@user.Email')" title="Suspend User">
                                                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14Z" stroke="currentColor" stroke-width="1.5"/>
                                                    <path d="M8 5V8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <circle cx="8" cy="10.5" r="0.5" fill="currentColor"/>
                                                </svg>
                                            </button>
                                        }

                                        <button class="btn-action btn-info" onclick="showExpirationModal('@user.Id', '@user.Email', '@(user.ExpiresAt?.ToString("yyyy-MM-dd") ?? "")')" title="Set Expiration">
                                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect x="2" y="3" width="12" height="11" rx="2" stroke="currentColor" stroke-width="1.5"/>
                                                <path d="M2 6H14" stroke="currentColor" stroke-width="1.5"/>
                                                <path d="M5 2V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                <path d="M11 2V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                            </svg>
                                        </button>

                                        <button class="btn-action btn-primary" onclick='showEditNameModal("@user.Id", "@user.Email", "@Html.Raw(user.FullName?.Replace("\"", "&quot;") ?? "")")' title="Edit Name">
                                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M11.3333 2L14 4.66667L8.66667 10H6V7.33333L11.3333 2Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <path d="M10 3.33333L12.6667 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <path d="M10.6667 10H14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                            </svg>
                                        </button>

                                        <button class="btn-action btn-secondary" onclick="showResetPasswordModal('@user.Id', '@user.Email')" title="Reset Password">
                                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M12 7H4C3.44772 7 3 7.44772 3 8V13C3 13.5523 3.44772 14 4 14H12C12.5523 14 13 13.5523 13 13V8C13 7.44772 12.5523 7 12 7Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <path d="M5 7V4C5 3.20435 5.31607 2.44129 5.87868 1.87868C6.44129 1.31607 7.20435 1 8 1C8.79565 1 9.55871 1.31607 10.1213 1.87868C10.6839 2.44129 11 3.20435 11 4V7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <circle cx="8" cy="10.5" r="1" fill="currentColor"/>
                                            </svg>
                                        </button>

                                        @if (user.IsSystemUser)
                                        {
                                            <button class="btn-action btn-danger" disabled title="System users cannot be deleted" style="opacity: 0.5; cursor: not-allowed;">
                                                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M2 4H14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M6 2H10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M12.5 4V13C12.5 13.8284 11.8284 14.5 11 14.5H5C4.17157 14.5 3.5 13.8284 3.5 13V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M6.5 7V11.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M9.5 7V11.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                </svg>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn-action btn-danger" onclick="showDeleteModal('@user.Id', '@user.Email')" title="Delete User">
                                                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M2 4H14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M6 2H10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M12.5 4V13C12.5 13.8284 11.8284 14.5 11 14.5H5C4.17157 14.5 3.5 13.8284 3.5 13V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M6.5 7V11.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                    <path d="M9.5 7V11.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                                </svg>
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Deleted</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <div class="pagination">
                @if (currentPage > 1)
                {
                    <a asp-action="Users" asp-route-page="@(currentPage - 1)" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-sortOrder="@sortOrder" class="btn btn-sm">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        Previous
                    </a>
                }

                <span class="page-info">Page @currentPage of @totalPages</span>

                @if (currentPage < totalPages)
                {
                    <a asp-action="Users" asp-route-page="@(currentPage + 1)" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-sortOrder="@sortOrder" class="btn btn-sm">
                        Next
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                }
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <p>No users found.</p>
        </div>
    }
</div>

<!-- Suspend User Modal -->
<div id="suspendModal" class="modal">
    <div class="modal-content">
        <h3>Suspend User</h3>
        <p>Suspending <strong id="suspendUserEmail"></strong></p>
        <form id="suspendForm" method="post" asp-action="SuspendUser">
            <input type="hidden" name="userId" id="suspendUserId" />
            <div class="form-group">
                <label for="suspendReason">Reason for suspension:</label>
                <textarea name="reason" id="suspendReason" class="form-control" rows="3" required></textarea>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('suspendModal')">Cancel</button>
                <button type="submit" class="btn btn-warning">Suspend User</button>
            </div>
        </form>
    </div>
</div>

<!-- Expiration Modal -->
<div id="expirationModal" class="modal">
    <div class="modal-content">
        <h3>Set Account Expiration</h3>
        <p>Setting expiration for <strong id="expirationUserEmail"></strong></p>
        <form id="expirationForm" method="post" asp-action="SetExpiration">
            <input type="hidden" name="userId" id="expirationUserId" />
            <div class="form-group">
                <label for="expiresAt">Expiration Date (leave empty to remove):</label>
                <input type="date" name="expiresAt" id="expiresAt" class="form-control" />
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('expirationModal')">Cancel</button>
                <button type="submit" class="btn btn-primary">Set Expiration</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete User Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content modal-danger">
        <h3>Delete User</h3>
        <p>Are you sure you want to delete <strong id="deleteUserEmail"></strong>?</p>
        <p class="warning-text">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18Z" stroke="currentColor" stroke-width="2"/>
                <path d="M10 6V10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <circle cx="10" cy="13" r="1" fill="currentColor"/>
            </svg>
            This action cannot be undone. The user will be soft-deleted.
        </p>
        <form id="deleteForm" method="post" asp-action="DeleteUser">
            <input type="hidden" name="userId" id="deleteUserId" />
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('deleteModal')">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete User</button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Name Modal -->
<div id="editNameModal" class="modal">
    <div class="modal-content">
        <h3>Edit User Name</h3>
        <p>Editing name for <strong id="editNameUserEmail"></strong></p>
        <form id="editNameForm" method="post" asp-action="UpdateUserName">
            <input type="hidden" name="userId" id="editNameUserId" />
            <div class="form-group">
                <label for="newName">Full Name:</label>
                <input type="text" name="newName" id="newName" class="form-control" required />
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('editNameModal')">Cancel</button>
                <button type="submit" class="btn btn-primary">Update Name</button>
            </div>
        </form>
    </div>
</div>

<!-- Reset Password Modal -->
<div id="resetPasswordModal" class="modal">
    <div class="modal-content">
        <h3>Reset Password</h3>
        <p>Resetting password for <strong id="resetPasswordUserEmail"></strong></p>
        <form id="resetPasswordForm" method="post" asp-action="ResetPassword">
            <input type="hidden" name="userId" id="resetPasswordUserId" />
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" name="newPassword" id="newPassword" class="form-control" required minlength="8" />
                <small style="color: var(--text-muted); display: block; margin-top: 0.5rem;">
                    Password must be at least 8 characters with uppercase, lowercase, and numbers.
                </small>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('resetPasswordModal')">Cancel</button>
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
</div>

<!-- Unsuspend Form (hidden) -->
<form id="unsuspendForm" method="post" asp-action="UnsuspendUser" style="display: none;">
    <input type="hidden" name="userId" id="unsuspendUserId" />
</form>

<style>
:root {
    --primary: #0066CC;
    --primary-light: #3385DB;
    --success: #28A745;
    --danger: #DC3545;
    --warning: #FFC107;
    --info: #00A4DC;
    --text: #212529;
    --text-muted: #6C757D;
    --border: #DEE2E6;
    --surface: #FFFFFF;
    --surface-2: #F1F3F5;
    --background: #F8F9FA;
}

.subtitle {
    color: var(--text-muted);
    margin-top: 0.25rem;
}

.alert {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid;
}

.alert-success {
    background: rgba(40, 167, 69, 0.1);
    border-color: rgba(40, 167, 69, 0.3);
    color: var(--success);
}

.alert-error {
    background: rgba(220, 53, 69, 0.1);
    border-color: rgba(220, 53, 69, 0.3);
    color: var(--danger);
}

.users-table-container {
    background: var(--surface);
    border-radius: 12px;
    border: 1px solid var(--border);
    overflow: hidden;
}

.users-table {
    width: 100%;
    border-collapse: collapse;
}

.users-table thead {
    background: var(--surface-2);
}

.users-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: var(--text);
    border-bottom: 2px solid var(--border);
    font-size: 0.9rem;
}

.users-table td {
    padding: 1rem;
    border-bottom: 1px solid var(--border);
    vertical-align: middle;
}

.users-table tbody tr:hover {
    background: var(--surface-2);
}

.users-table tbody tr.deleted-row {
    opacity: 0.6;
}

.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-left: 0.5rem;
}

.badge-verified {
    background: rgba(40, 167, 69, 0.1);
    color: var(--success);
}

.status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 600;
}

.status-badge.active {
    background: rgba(40, 167, 69, 0.1);
    color: var(--success);
}

.status-badge.inactive {
    background: rgba(108, 117, 125, 0.1);
    color: var(--text-muted);
}

.status-badge.suspended {
    background: rgba(255, 193, 7, 0.1);
    color: #856404;
}

.status-badge.deleted {
    background: rgba(220, 53, 69, 0.1);
    color: var(--danger);
}

.expiration-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    background: rgba(0, 164, 220, 0.1);
    color: var(--info);
}

.expiration-badge.expired {
    background: rgba(220, 53, 69, 0.1);
    color: var(--danger);
}

.text-muted {
    color: var(--text-muted);
}

.action-buttons {
    display: flex;
    gap: 0.5rem;
}

.btn-action {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border: 1px solid var(--border);
    background: var(--surface);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-action:hover {
    transform: translateY(-1px);
}

.btn-action.btn-success {
    color: var(--success);
}

.btn-action.btn-success:hover {
    background: rgba(40, 167, 69, 0.1);
    border-color: var(--success);
}

.btn-action.btn-warning {
    color: #856404;
}

.btn-action.btn-warning:hover {
    background: rgba(255, 193, 7, 0.1);
    border-color: #FFC107;
}

.btn-action.btn-info {
